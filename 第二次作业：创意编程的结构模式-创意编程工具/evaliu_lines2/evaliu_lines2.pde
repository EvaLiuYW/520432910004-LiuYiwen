void setup() {
  size(1000, 1000);
  background(0);
}

void draw() {
  noStroke();
  fill(0, 10);
  rect(0, 0, width, height);

  fill(255);

  float xx=random(width);
  float yy=height;
  stroke(random(190, 255), random(190, 255), random(190, 255));
  strokeWeight(random(3, 10));
  line(xx, 0, xx, yy);

  float xxx=width;
  float yyy=random(height);
  stroke(255, random(10, 20));
  strokeWeight(50);
  line(0, yyy, xxx, yyy);
}
